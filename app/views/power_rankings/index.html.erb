<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Power rankings</h1>
    <%= link_to 'New power ranking', new_power_ranking_path, class: "rounded-lg py-3 px-5 bg-yellow-500 text-white block font-medium" %>
  </div>

  <div id="power_rankings" class="min-w-full">
    <%= render @power_rankings %>
  </div>
</div>
