<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
      <%= notice %> 
    </p>
  <% end %>
  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
    Week 1 Power Rankings
  </h1>

  <%= link_to 'Edit this Power Ranking', edit_power_ranking_path(@power_ranking), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <div class="inline-block ml-2">
    <%= button_to 'Destroy this Power Ranking', power_ranking_path(@power_ranking), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>
  <%= link_to 'Back to Power Ranking', power_rankings_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  
  <ul>
    <% cache @rankings do %>
      <% @rankings.each do |ranking| %>
        <% cache ranking do %>
          <li class="flex mb-6">
            <!-- <%= image_tag(ranking.image,
              class: 'object-contain w-40 h-48 shadow mr-6') %> -->
            <div>
              <h2 class="font-bold text-lg mb-3"><%= ranking.position %></h2>
              <p>
                <%= sanitize(ranking.description) %>
              </p>
              <div class="mt-3">
                <%= button_to 'Add to Cart',
                    line_items_path(product_id: ranking),
                    form_class: 'inline',
                    class: 'ml-4 rounded-lg py-1 px-2
                            text-white bg-green-600' %>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
  </div>
