<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing <%= @ranking.team.team_name %>'s Ranking</h1>
  <h2 class="font-bold text-2xl mt-1">Week <%= @power_ranking.week %>, <%= @power_ranking.year %></h2>
  <p class="text-sm"> Ranking: <%= @ranking.position %></p>

  <%= render "form", ranking: @ranking %>

  <%= link_to "Back to Power Ranking", edit_power_ranking_path(@power_ranking.id), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
